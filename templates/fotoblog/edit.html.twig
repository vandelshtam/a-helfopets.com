{% extends 'base.html.twig' %}

{% block title %}Edit Fotoblog{% endblock %}

{% block body %}
<section class="form add_blog">
        <div class="container">
                <div class="form_content">
                    <div class="form_title-box">
                        <div class="form_title">
                            Страница создания новго слайдера поста
                        </div>
                        <div class="form_text">
                            При создании поста пожалуйста следуйте рекомендациям системы
                        </div>
                    </div>
                    <div class="form_box">
                        {{ include('fotoblog/_form.html.twig', {'button_label': 'Update'}) }}
                        {{ include('fotoblog/_delete_form.html.twig') }}
                    </div>   
                </div>    
        </div>
</section>
<div id="hidden-content">
    {{ form_start(fast_consultation_form) }}
        {{ form_widget(fast_consultation_form) }}
