{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
{% for label, messages in app.flashes(['success', 'notice']) %}
    {% for message in messages %}
        <div class="flash-{{ label }} notice_message">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<section class="slider">
        <div class="container">
            <div class="slider_inner">
            {% for slider in sliders %}
                <div class="slider_item">
                    <div class="slider_item-content">
                        <div class="slider_title">
                            {{ slider.serviceName }}
                        </div>
                        <div class="slider_text">
                            {{ slider.discriptionService }}
                        </div>
                        <a data-fancybox data-src="#hidden-content" href="javascript:;" class="slider_btn default-btn">
                            Оставить заявку
                        </a>
                        
                    </div>    
                </div>
                {% endfor %}
            </div>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="default-btn" href="{{ path('slider_index') }}">Edition</a>
            {% endif %}
        </div>
    </section>
    <section class="servises">
        <div class="container">
            <div class="servises_top">
                <div class="servises_title-box">
                    <div class="servises_title">
                        Наши услуги
                    </div>
                    <div class="servises_text">
                        Комплексный подход к вашему вопросу,своевременная помощь, представление интересов во всех органах и суде.
                    </div>
                </div>
                <div class="servises_btn">
                    <a href="{{ path('service_index') }}">
                    Посмотреть все услуги
                    </a>
                </div>    
            </div>
            <div class="servises_items">
                {% for service in services %}
                <div class="servises_item">
                    <img src="{{ asset('uploads/img/avatars/' ~ service.Avatar) }}" alt="" class="img_servises-1">
                    <div class="about_item-title">
                        {{ service.name }}
                    </div>
                    <div class="servises_item-text">
                        {{ service.discription }}
                    </div>
                    <div class="servises_item-btn">
                        <a href="{{ path('service_show', {'id': service.id}) }}" class="servises_item-link">
                            Подробнее
                        </a>
                        <a data-fancybox data-src="#hidden-content" href="javascript:;" class="default-btn">
                            Заказать
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
