                </div>
                <div class="news_btn">
                    <a href="{{ path('article_index') }}">
                    Открыть все новости
                    </a>
                </div>    
            </div>
            <div class="news_inner">
                <div class="news_slider">
                    <div class="news_slider-inner">
                    {% for blog in blogs %}
                        <div class="news_slider-item">
                        <a href="{{ path('blog_show', {'id': blog.id}) }}">
                            <div class="news_slider-title">
                                {{ blog.title }}
                            </div>
                            <div class="news_slider-text">
                                {{ blog.preview }}
                            </div>
                            <div class="news_slider-author">
                                {{ blog.author }}
                            </div>
                        </a>
                        </div>
                    {% endfor %}    
                    </div>
                </div>
                {% for article in articles %}
                <a href="{{ path('article_show', {'id': article.id}) }}" class="news_blog">
                    <div class="news_images">
                        <img src="{{ asset('uploads/img/avatars/' ~ article.AvatarArticle) }}" alt="" class="avatar_new_image">
                        <div class="news_date">{{ article.created_at|date('d-m') }}</div>
                    </div>
                    <div class="news_blog-title">
                        {{ article.title }}
                    </div>
                    <div class="news_blog-text">
