{% extends 'base.html.twig' %}

{% block title %}Achievements index{% endblock %}

{% block body %}
    <h1>Achievements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Img</th>
                <th>Paragraph</th>
                <th>Link</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achievement in achievements %}
            <tr>
                <td>{{ achievement.id }}</td>
                <td>{{ achievement.title }}</td>
                <td>{{ achievement.img }}</td>
                <td>{{ achievement.paragraph }}</td>
                <td>{{ achievement.link }}</td>
                <td>{{ achievement.text }}</td>
                <td>
                    <a href="{{ path('achievements_show', {'id': achievement.id}) }}">show</a>
                    <a href="{{ path('achievements_edit', {'id': achievement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('achievements_new') }}">Create new</a>
{% endblock %}
