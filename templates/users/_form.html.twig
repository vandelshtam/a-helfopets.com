{% if form_errors(form) %}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
{% endif %}
{{ form_start(form) }}
    <div class="add_new-form form_box-inner">
        <div class="add_new-form form_box-left">
            <label for="">                
                {{ form_row(form.name) }}
            </label>   
        </div>
        <div class="add_new-form form_box-right">   
            <label for="file-upload" class="add_new custom-file-upload"> 
                текущая картинка 
                {% if user.Avatar != null %}
                    <img src="{{ asset('uploads/img/avatars/' ~ user.Avatar) }}" alt="">
                    {% else %}
                    <img src="{{ asset('asset/img/fon-default-avatar-1.png') }}" alt="">
                {% endif %}               
                {{ form_row(form.avatar) }}
            </label>   
            {% if is_granted('ROLE_ADMIN') %}
            <button class="default-btn" type="submit">Сохранить</button>
            {% endif %}
            <a href="{{ path('users') }}" class="default-btn">Назад</a>  
        </div>
    </div>    
{{ form_end(form) }}      
